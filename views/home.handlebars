{{#each dataByDate}}
<button type="button" class="btn btn-neutral" hx-get="/weather/{{@key}}"
                        hx-target="#modalContent" 
                         onclick="document.getElementById('mymodal').showModal()">
                        {{@key}}
                      </button>
{{/each}}


<dialog id="mymodal" class="modal">
<div class="modal-box" style="width: 80%; max-width: 80%; max-height: 90vh;">   
       <div class="modal-content overflow-y-auto p-4" style="max-height: calc(90vh - 60px);"></div>

    <p class="py-4" id="modalContent">{{{weatherdata}}}</p>
</div>
  </div>
</dialog>



  
